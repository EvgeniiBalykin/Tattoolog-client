{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "modules/*": ["modules/*"],
      "assets/*": ["assets/*"],
      "data/*": ["data/*"],
      "pages/*": ["pages/*"],
      "routes/*": ["routes/*"],
      "types": ["types"],
      "ui/*": ["UI/*"],
      "services/*": ["services/*"],
      "helpers/*": ["helpers/*"],
      "hooks/*": ["hooks/*"]
    }
  },
  "include": ["src", "public"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
